{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments":true,
    "noImplicitAny": false,
    "outDir": "./public/js/app",
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "dist",
    "assets/app/polyfills.ts"
  ],
  "include": [
    "./assets/app/app.module.ts",
    "./assets/app/*/*.module.ts",
    "./assets/app/*.module.ts",
    "./assets/app/*.d.ts"
  ],

  "angularCompilerOptions": {
    "debug": true,
    "entryModule":"assets/app/app.module#AppModule"
  }
}

